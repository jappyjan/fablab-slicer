{
  "name": "fablab-slicer",
  "description": "A simple UI for OrcaSlicer, designed for FabLabs and 3D printing beginners.",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:build": "docker build -t fablab-slicer .",
    "docker:run": "docker run --rm --name fablab-slicer -p 3000:3000 -v $(pwd)/slicer-configs:/app/slicer-configs -e PUBLIC_LOG_LEVEL=debug fablab-slicer",
    "docker:shell": "docker run --rm -it --name fablab-slicer-shell -p 3000:3000 -v $(pwd)/slicer-configs:/app/slicer-configs -e PUBLIC_LOG_LEVEL=debug --entrypoint /bin/sh fablab-slicer"
  },
  "dependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.18",
    "basic-ftp": "^5.0.5",
    "lucide-react": "^0.344.0",
    "nanoid": "^5.0.9",
    "next": "14.1.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/ftp": "^0.3.36"
  }
}
